      <h1><strong>Edit Missing Person</strong></h1>
      <br>
      <p>Edit the fields mentioned below</p>
      <hr>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" value="<%=missDetails.name%>" id="name" name="name" aria-describedby="emailHelp">
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputState"><b>Gender</b></label>
          <input type="text" class="form-control" value="<%=missDetails.gender%>" id="gender" name="gender">
        </div>
        <div class="form-group col-md-4">
          <label for="inputState"><b>Age</b></label>
          <input type="text" class="form-control" value="<%=missDetails.age%>" id="age" name="age">
        </div>
        <div class="form-group col-md-4">
          <i class="far fa-calendar-alt"></i>
          <label for="inputState"><b>Date Of Birth</b></label>
          <input type="date" class="form-control" value="<%=missDetails.inputdateofbirth%>" id="inputdateofbirth" name="inputdateofbirth" placeholder="DD/MM/YYYY">
        </div>
      </div>
      <br>

      <div class="form-row">
        <div class="form-group">
          <label for="inputState"><b>Languages</b></label>
          <input type="text" class="form-control" value="<%=missDetails.languages%>" id="inputlanguage" name="languages">
        </div>

      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="inputState"><b>Physical Description</b></label>
          <input type="text" class="form-control" value="<%=missDetails.phyCond%>" id="inputlanguage" name="phyCond">
        </div>

      </div>

