      <div class="form-row">
        <div class="form-group col-md-4">
          <i class="far fa-calendar-alt"></i>
          <label for="inputState"><b>Date Missing</b></label>
          <input type="date" class="form-control" id="inputdatemissing" value="<%=missDetails.dateMissing%>" name="dateMissing">
        </div>
        <div class="form-group col-md-4">
          <i class="fas fa-clock"></i>
          <label for="inputState"><b>Missing Time</b></label>
          <input type="date" class="form-control" id="inputmissingtime" value="<%=missDetails.missingTime%>" name="missingTime">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <i class="far fa-calendar-alt"></i>
          <label for="inputState"><b>Registration Date</b></label>
          <input type="date" class="form-control" id="inputregistrationdate" value="<%=missDetails.regDate%>" name="regDate">
        </div>
        <div class="form-group col-md-4">
          <label for="inputState"><b>Status</b></label>
          <input type="Boolean" class="form-control" id="inputstatus" value="<%=missDetails.status%>" name="status">
        </div>
      </div>


      <br>
      <br>
      <p>
        <b>
          <h5>Last Seen</h5>
        </b>
      </p>
      <br>
      <i class="fas fa-clock"></i>
      <label for="inputState"><b>Last Seen</b></label>
